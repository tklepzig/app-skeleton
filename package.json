{
  "name": "app-skeleton",
  "version": "1.0.0",
  "main": "dist/server/index.js",
  "scripts": {
    "dev": "concurrently -n client,server,tailwind,opener --hide opener --handle-input --default-input-target server 'webpack --mode=development -w' 'nodemon' 'tailwindcss -i ./src/public/input.css -o ./src/public/output.css --watch'  'opener http://localhost:8080'",
    "build": "tailwindcss -i ./src/public/input.css -o ./src/public/output.css && webpack --mode=production",
    "start": "node dist/server/index.js"
  },
  "devDependencies": {
    "@types/express": "*",
    "@types/react": "*",
    "@types/react-dom": "*",
    "@typescript-eslint/eslint-plugin": "*",
    "@typescript-eslint/parser": "*",
    "clean-webpack-plugin": "*",
    "concurrently": "*",
    "copy-webpack-plugin": "*",
    "css-loader": "*",
    "eslint": "*",
    "eslint-plugin-import": "*",
    "eslint-plugin-react": "*",
    "eslint-plugin-react-functional-set-state": "*",
    "eslint-plugin-react-hooks": "*",
    "eslint-plugin-tailwindcss": "*",
    "html-webpack-plugin": "*",
    "nodemon": "*",
    "opener": "*",
    "style-loader": "*",
    "tailwindcss": "*",
    "terser-webpack-plugin": "*",
    "ts-loader": "*",
    "typescript": "*",
    "vite-tsconfig-paths": "*",
    "vitest": "*",
    "webpack": "*",
    "webpack-cli": "*",
    "webpack-node-externals": "*"
  },
  "dependencies": {
    "express": "*",
    "react": "*",
    "react-dom": "*"
  }
}
